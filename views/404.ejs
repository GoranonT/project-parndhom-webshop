    <script type="text/javascript">
        document.onkeydown=function(e) 
            {
                e=e||window.event;
                ///prevent F5 refresh page
                if (e.keyCode === 116 ){
                    e.keyCode = 0;
                    if(e.preventDefault)
                        e.preventDefault();
                    else
                        e.returnValue = false;
                    return false;
                }
    
                switch (event.keyCode){ 
                case 116 : //F5 button
                    event.returnValue = false;
                    event.keyCode = 0;
                    return false; 
                case 82 : //R button
                    if (event.ctrlKey){ 
                        event.returnValue = false; 
                        event.keyCode = 0;  
                        return false; 
                    } 
                }
            }
    </script>
   
</body>
